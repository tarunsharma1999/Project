@model PensionData
@{
    ViewBag.Title = "Show Pension Details";
}

@if (Model == null)
{
    <h5> Invalid User Details, Please Provide Verified Detail !!! </h5>
}
else
{
<form>
    <div class="form-group row">
        <label for="@Model.AadharNumber" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Model.AadharNumber">
        </div>
    </div>
    <div class="form-group row">
        <label for="@Model.PensionAmount" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Model.PensionAmount">
        </div>
    </div>
    <div class="form-group row">
        <label for="@Model.BankCharges" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Model.BankCharges">
        </div>
    </div>

</form>
 
}
